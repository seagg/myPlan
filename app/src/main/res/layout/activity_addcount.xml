<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zhaoxuhai.myplan.AddCountActivity">

    <TextView
        android:id="@+id/plan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="asdf"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/curr_count_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textSize="40sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="300dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/minus1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20sp" />
        <SeekBar
            android:id="@+id/curr_count_bar"
            android:layout_width="0dp"
            android:maxHeight="50dp"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:indeterminate="false"
            android:max="500" />
        <Button
            android:id="@+id/add1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="360dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/minus10"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:text="-10"
            android:textSize="20sp" />
        <Button
            android:id="@+id/add10"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="+10"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_minus50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="420dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/minus50"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_marginRight="50dp"
            android:text="-50" />
        <Button
            android:id="@+id/add50"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="+50" />
    </LinearLayout>
    <Button
        android:id="@+id/ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="完成"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/add_minus50"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
